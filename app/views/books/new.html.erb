<h2>Books</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  
<% @books.each do |book| %>
    
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>Show</td>
    <td>Edit</td>
    <td>Destroy</td>
  </tr>
  
  <% end %>
</table>


<%= form_with model: @book, url: 'books',method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  
  
  <%= f.submit 'Create Book' %>
  
<% end %>

