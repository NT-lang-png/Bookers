<div><%= flash[:notice] %></div>

<body class="edit">
  <h1>Editing Book</h1>
  
  <% if @book.errors.any? %>
    <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  
  <div class="editform">
    <%= form_with model: @book,url:book_path(@book.id),method: :patch do |f| %>
    
    <p>Title</p>
    <%= f.text_field :title %>
    
    <p>Body</p>
    <div class="editformbody"><%= f.text_area :body %></div>
    
    <%= f.submit 'Update Book' %>
  
  </div>
  
  <div class="editbuttons">
    <p class="editbutton"><%= link_to "Show",book_path(@book.id) %></p>
    <p class="editbutton">|</p>
    <p class="editbutton"><%= link_to "Back",books_path %></p>
  </div>
  
  <% end %>

</body>