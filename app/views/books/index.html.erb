

<body class ="new">
  <div class = "newflash"><%= flash[:notice] %></div>

  <h1 class ="newheadder">Books</h1>
  <table class ="newtable">
    <tr>
      <th class="tablehead">Title</th>
      <th class="tablehead">Body</th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td width="50"><%= link_to "Show" ,book_path(book.id) %></td>
      <td width="50"><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td width="50"><%= link_to "Destroy", book_path(book.id), method: :delete,data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </table>

  <div class ="newform">
    <h2>New Book</h2>

    <% if @book.errors.any? %>

      <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @book, url: books_path ,method: :post do |f| %>
      <p class="newformtitle">Title</p>
        <div class ="newtexttitle"><%= f.text_field :title %></div>
      <p class="newformbody">Body</p>
        <div class="newtextbody"><%= f.text_field :body %></div>


      <%= f.submit 'Create Book' %>
    <% end %>
  </div>

</body>